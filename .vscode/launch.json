  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Hass",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/hass",
      "args": ["--config", "${workspaceFolder}/config", "--debug"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Attach process",
      "type": "debugpy",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false
    }
  ]
}
